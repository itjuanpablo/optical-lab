create database adm;

use adm;

create table users (
  id not null auto_increment,
  login varchar(30) not null,
  password varchar(50) not null,
  primary key (id)
) default charset = utf8;

create database data;

use data;

create table cliente (
  id_user not null auto_increment,
  nome varchar(30) not null,
  cidade varchar(50) not null,
  cpf int(11) not null,
  nascimento date not null,
  telefone int(20) not null,
  celular int(20) not null
  olhododireito decimal(5,2) not null,
  olhoesquerdo decimal(5,2) not null
  observacao varchar(30),
  primary key(id),
  secondary key(id_compra)
) default charset = utf8;

create table compra (
  id_compra not null auto_increment,
  data date not null,
  valor decimal(5,2) not null,
  primary key (id_compra),
  secondary key (id_user)
) default charset = utf8;

create table medicos (
  id_medico not null auto_increment,
  nome varchar(30) not null,
  crm int(30) not null,
  cidade varchar(30) not null,
  clinica varchar(30) not null
  primary key (id_medico)
) default charset = utf8;